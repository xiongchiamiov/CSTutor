all:
	@echo "TODO: Makefile documentation section"

doc:
	cd ../documentation && python ../implementation/manage.py makedoc
	@echo ""
	@echo "################################################"
	@echo "Documentation written to documentation directory"
	@echo "Note that this is not the documentation module that you see here"
	@echo "cd ../documentation"
	@echo "################################################"

runserver:
	@echo "running Django server in current directory"
	python manage.py runserver

database:
	@echo "Unimplemented"
	
clean: binclean docclean
	@echo ""
	@echo "################################################"
	@echo "Precompiled python files and autogenerated documentation"
	@echo "has been removed"
	@echo "################################################"

binclean:
	find . -iname '*.pyc' -exec rm {} \;

docclean:
	find ../documentation -iname '*.html' \
		-not -name '*chat.html' \
		-not -name '*index.html' \
		-delete

databaseclean:
	@echo "Unimplemented"
